<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.manager.PromotionController">
    <stylesheets>
        <URL value="@promotion.css" />
    </stylesheets>
    <children>
      <VBox alignment="TOP_CENTER" prefHeight="618.0" prefWidth="685.0">
         <children>
              <HBox alignment="CENTER_LEFT" prefHeight="85.0" prefWidth="685.0" spacing="10.0">
                  <children>
                      <TextField fx:id="txtSearch" onAction="#onSearch" promptText="Search Promotion" />
                  <Button mnemonicParsing="false" onAction="#onAdd" text="Add New Promotion" />
                  </children>
              </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="534.0" prefWidth="685.0" spacing="10.0">
               <children>
                  <TableView fx:id="tbPromotion" prefHeight="534.0" prefWidth="697.0">
                    <columns>
                      <TableColumn fx:id="colID" prefWidth="78.0" text="Promotion ID" />
                      <TableColumn fx:id="colName" prefWidth="108.0" text="Name" />
                        <TableColumn fx:id="colDes" prefWidth="133.0" text="Description" />
                        <TableColumn fx:id="colType" prefWidth="91.0" text="Type" />
                        <TableColumn fx:id="colValue" prefWidth="88.0" text="Value" />
                        <TableColumn fx:id="colStartDate" prefWidth="74.0" text="Start Date" />
                        <TableColumn fx:id="colEndDate" prefWidth="72.0" text="End Date" />
                        <TableColumn fx:id="colStatus" prefWidth="65.0" text="Status" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </HBox>

         </children>
      </VBox>
        
    </children>
</AnchorPane>
