<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="controller.manager.EmployeeController">
    <stylesheets>
        <URL value="@employee.css" />
    </stylesheets>
    <children>
      <VBox alignment="TOP_CENTER" prefHeight="618.0" prefWidth="685.0">
         <children>
              <HBox alignment="CENTER_LEFT" prefHeight="85.0" prefWidth="685.0" spacing="10.0">
                  <children>
                      <TextField fx:id="txtSearch" onAction="#onSearch" promptText="Search Employee" />
                  <Button mnemonicParsing="false" onAction="#onAdd" text="Add New Employee" />
                  </children>
              </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="534.0" prefWidth="685.0" spacing="10.0">
               <children>
                  <TableView fx:id="tbEmployee" prefHeight="534.0" prefWidth="697.0">
                    <columns>
                      <TableColumn fx:id="colID" prefWidth="78.0" text="Employee ID" />
                      <TableColumn fx:id="colName" prefWidth="108.0" text="Full Name" />
                        <TableColumn fx:id="colDob" prefWidth="133.0" text="DoB" />
                        <TableColumn fx:id="colPhone" prefWidth="91.0" text="Phone" />
                        <TableColumn fx:id="colAddress" prefWidth="88.0" text="Address" />
                        <TableColumn fx:id="colRole" prefWidth="74.0" text="Role" />
                        <TableColumn fx:id="colHireDate" prefWidth="72.0" text="HireDate" />
                        <TableColumn fx:id="colSalary" prefWidth="65.0" text="Base Salary" />
                        <TableColumn fx:id="colUser" prefWidth="65.0" text="User" />
                        <TableColumn fx:id="colPassword" prefWidth="65.0" text="Password" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </HBox>

         </children>
      </VBox>
        
    </children>
</AnchorPane>
