<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.manager.SupplierController">
    <stylesheets>
        <URL value="@supplier.css" />
    </stylesheets>
    <children>
      <VBox alignment="TOP_CENTER" prefHeight="618.0" prefWidth="685.0">
         <children>
              <HBox alignment="CENTER_LEFT" prefHeight="85.0" prefWidth="685.0" spacing="10.0">
                  <children>
                      <TextField fx:id="txtSearch" onAction="#onSearch" promptText="Search Supplier (Name/Phone)" />
                      <Button mnemonicParsing="false" onAction="#onAdd" text="Add New Supplier" />
                  </children>
              </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="534.0" prefWidth="685.0" spacing="10.0">
               <children>
                  <TableView fx:id="tbSupplier" prefHeight="534.0" prefWidth="697.0">
                    <columns>
                      <TableColumn fx:id="colID" prefWidth="50.0" text="ID" />
                      <TableColumn fx:id="colName" prefWidth="150.0" text="Supplier Name" />
                      <TableColumn fx:id="colContact" prefWidth="120.0" text="Contact Person" />
                      <TableColumn fx:id="colPhone" prefWidth="100.0" text="Phone" />
                      <TableColumn fx:id="colAddress" prefWidth="150.0" text="Address" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </HBox>
         </children>
      </VBox>
    </children>
</AnchorPane>
