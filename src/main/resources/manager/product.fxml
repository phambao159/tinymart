<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="618.0" prefWidth="685.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.manager.ProductController">
    <stylesheets>
        <URL value="@product.css" />
    </stylesheets>
    <children>
      <VBox alignment="CENTER" prefHeight="618.0" prefWidth="685.0">
         <children>
              <HBox alignment="CENTER_LEFT" prefHeight="43.0" prefWidth="685.0" spacing="10.0">
                  <children>
                      <TextField fx:id="txtSearch" promptText="Search Product" />
                      <ComboBox fx:id="cbCategory" prefHeight="30.0" prefWidth="137.0" promptText="Category" />
                      <ComboBox fx:id="cbSize" prefHeight="30.0" prefWidth="112.0" promptText="Size" />
                      <ComboBox fx:id="cbPromotion" prefHeight="30.0" prefWidth="150.0" promptText="Promotion" />
                  </children>
              </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="685.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onAdd" text="Add New Product" />
               </children>
            </HBox>
      
              <ScrollPane fitToWidth="true" prefHeight="534.0" prefWidth="685.0">
                  <content>
                      <FlowPane fx:id="productContainer" hgap="20.0" prefWidth="670.0" styleClass="productContainer" vgap="20.0">
                    </FlowPane>
                  </content>
              </ScrollPane>
         </children>
      </VBox>
        
    </children>
</AnchorPane>
