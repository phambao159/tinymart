<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="cardProduct" alignment="TOP_LEFT" styleClass="product-card" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.manager.ProductCardController">
    <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <ImageView fx:id="imgProduct" fitHeight="114.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            </ImageView>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
        <Label fx:id="lbName" text="Coca Cola Zero 330ml" />
        <Label fx:id="lbCost" text="Cost : 5$" />
        <Label fx:id="lbSelling" text="Selling : 10$" />
        <Label fx:id="lbStock" text="Stock : 500" />
        <Label fx:id="lbStatus" text="Available" />
      <HBox alignment="CENTER" prefHeight="36.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onDetail" text="Details" />
         </children>
      </HBox>
    </children>
</VBox>
